.items-control
  
  margin-left 50px
  margin-top 50px
  width 400px
  text-align center
  border 1px solid black
  
  .button
    padding 5px 15px
    background-color #ccc
    border 1px solid black
    border-radius 3px
    width 90%
    margin-top 5px
    
    &:hover
      background #ddd
      text-decoration underline
  
  .add-controls, .search-controls, .result-controls
    margin-bottom 10px
    padding 5px
    border-bottom 1px solid black
    
  .result-controls
    text-align left 
    .list-item
      list-style-type none
      font-size 1.2em
      vertical-align: middle
      padding 15px
      border-bottom 1px solid black
      &:last-of-type
        border-bottom 0
      
      &:after
        clear both
        display block
        content ''
              
    .button
      width 40px
      height 40px
      float left
      text-align center
      margin-right 15px